# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Rumble Account Credentials
RUMBLE_EMAIL=your_rumble_email@example.com
RUMBLE_PASSWORD=your_rumble_password_here
RUMBLE_CHANNEL=your_channel_name_here

# Bot Configuration
MAX_FILE_SIZE_MB=2048
UPLOAD_TIMEOUT_SECONDS=1800
RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=30

# Selenium Configuration
HEADLESS_MODE=true
SELENIUM_TIMEOUT=30
IMPLICIT_WAIT=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/rumble_bot.log

# Deployment Configuration
PORT=8080
HOST=0.0.0.0
WEBHOOK_URL=https://your-app-name.herokuapp.com/webhook

# Optional: Random Content Generation
ENABLE_RANDOM_TITLES=true
ENABLE_RANDOM_DESCRIPTIONS=true
ENABLE_RANDOM_TAGS=true
